body {
  margin: 0;
  padding: 0;
  background: #F5F6F7;
}


#main {
  position: absolute;
  overflow: hidden;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 10px;
}


.TimeComponent {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto;
}


h1, h2 {
  font-family: sans-serif;
}


h2 > span {
  font-family: monospace;
  color: firebrick;
}


.waterfall > ul {
  display: inline-block;
  font-family: monospace;
  font-size: 15px;
  list-style-type: square;
  vertical-align: top;
}


li:first-child {
  position: relative;
  left: -1em;
  margin-bottom: 2px;
  font-weight: bold;
  font-size: 17px;
  list-style-type: none;
  text-decoration: underline;
}
